<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.chris.umbrella.view.settings.SettingsActivity">

    <TextView
        android:text="@string/zip"
        android:layout_marginTop="@dimen/std_settings_padding"
        android:layout_marginStart="@dimen/std_settings_padding"
        android:textSize="@dimen/std_settings_title"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvZip"
        android:onClick="requestZip"
        android:layout_marginBottom="@dimen/std_settings_padding_nearborder"
        android:layout_marginStart="@dimen/std_settings_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        style="@style/Divider"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp" />
    <TextView
        android:text="@string/units"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/std_settings_padding_nearborder"
        android:textSize="@dimen/std_settings_title"
        android:layout_marginStart="@dimen/std_settings_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvUnits"
        android:onClick="requestUnits"
        android:layout_marginStart="@dimen/std_settings_padding"
        android:layout_marginBottom="@dimen/std_settings_padding_nearborder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        style="@style/Divider"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
